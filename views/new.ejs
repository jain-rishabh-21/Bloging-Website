<% include ./partials/header %> 

<div class = "ui main text container secondary segment">
    <div class = "ui huge header"> New Blog </div>
    <form class = "ui form" action = "/blogs" method = "POST">
        <div class = "field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Enter The Title">
        </div>
        <div class = "field">
            <label>Image</label>
             <input type="text" name="blog[image]" placeholder="Enter The Image URL">
        </div>
        <div class = "field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="Enter The Blog Post"></textarea>
        </div>
        <input class = "ui violet big basic button" type = "submit">
    </form>
</div>

